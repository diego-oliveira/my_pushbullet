<h2>Send Data</h2>


<!--
  Devices:
<%= @devices%>
-->


<%
  options = ""

  _devices = @devices["devices"]
  _devices.each do |_dev|
    options += "<option value=\"#{_dev["iden"]}\">#{_dev["extras"]["model"]} - #{_dev["extras"]["android_version"]} - #{_dev["extras"]["manufacturer"]}</option>"
  end
%>


<%= form_tag(push_path, method: :post) do%>
<div class="innerLR">
  Devices: <br>
  <%= select_tag "iden", options.html_safe %>
</div>

<div class="innerLR">
  Title: <br>
  <%= text_field_tag 'title' %>
</div>

<div class="innerLR">
  Body: <br>
  <%= text_area_tag 'body'%>
</div>


<div class="innerT">
  <%= submit_tag "PushBullet!", class: "btn btn-primary btn-block" %>
</div>







<%end%>