

<%= form_tag(set_token_path, method: :post, :role=> "form") do%>
  <div class="form-group">
    <label for="token">API Key (from Pushbullet > My Account):</label>
    <%= text_field_tag 'token', '', :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Set Token", class: "btn btn-primary btn-block" %>
  </div>
<%end%>
